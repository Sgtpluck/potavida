<div id='sign_in_here'>
<%= form_tag '/signin' do %>
  <div class='field'>
    <%= label_tag :name %>
    <%= text_field_tag :name %><br>
  </div>
  
  <div class='field'>
    <%= label_tag :password %>
    <%= password_field_tag :password %><br>
  </div>
  <div class='actions'>
    <%= submit_tag 'Sign in' %>
  </div>
<% end %>
</div>