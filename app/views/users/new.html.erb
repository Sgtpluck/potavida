<h2>Make a new user!</h2>
  <% @new_user.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>

<%= form_for @new_user do |f| %>
<table>
  <tr>
   <div class="form_field">
      <td><%= f.label :email %></td>
      <td><%= f.text_field :email %></td>
    </div>
  </tr>
  <tr>
    <div class="form_field">
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </div>
  </tr>
  <tr>
    <div class="form_field">
      <td><%= f.label :role %></td>
      <td><%= f.select(:role, options_for_select(['Admin','Client','Field Manager']), {}, class: "form-control") %></td>
    </div>
  </tr>
  <tr>
    <div class="form_field">
      <td><%= f.label :password %></td>
      <td><%= f.password_field :password %></td>
    </div>
  </tr>
  <tr>
    <div class="form_field">
      <td><%= f.label :password_confirmation %></td>
      <td><%= f.password_field :password_confirmation %></td>
    </div>
  </tr>
  <tr><td><div class="actions"><%= f.submit class:"btn btn-lg btn-primary"%></div></td></tr>
</table>
<% end %>