  <body>

    <div class="container">

      <div class="blog-header">
        <h1 class="blog-title">Potavida Blog</h1>
        <p class="lead blog-description">The Latest News on our Evolving Product</p>
      </div>

      <div class="row">

        <div class="col-sm-8 blog-main">

          <div class="blog-post">
            <% @posts.each do |post| %>
            <h3 class="blog-post-title"><%= link_to("#{post.title}", "/posts/#{post.id}") %></h3>
            <p class="blog-post-meta"><%= post.date.strftime('%b %d, %Y') %> by <%= post.user.name %></p>

            <p><%= post.content %></p>
            <hr>
            <% end %>
          </div><!-- /.blog-post -->

            <div class="pager">
              <%= paginate @posts %>
            </div>
        </div><!-- /.blog-main -->

        <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
          <div class="sidebar-module sidebar-module-inset">
            <% if current_user.try(:role) == "admin" %>
            <%= link_to 'Create a New Post', new_post_path, class: "btn btn-large btn-success" %>
            <br><br>
            <% end %>

