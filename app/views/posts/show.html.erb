    <div class="container blog">

      <div class="blog-header show">
        <h1 class="blog-title">Potavida Blog</h1>
        <p class="lead blog-description">The Latest News on our Evolving Product</p>
      </div>
      <hr>

      <div class="row">

        <div class="col-sm-8 blog-main show">

          <div class="blog-post">
            <h2 class="blog-post-title"><%= @post.title %></h2>
            <p class="blog-post-meta"><%= @post.date.strftime('%b %d, %Y') %> by <%= @post.user.name %></p>

            <p><%= markdown @post.content %></p>
            <% if current_user.try(:role) == "admin" %>
            <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-warning' %>
            
            <%= link_to "Delete", post_path(@post), class: 'btn btn-danger', :confirm => "Are you sure you want to delete this post?", :method => :delete %>
            <% end %>
            <hr>
            <%= link_to "Back to Blog", posts_path, class: 'btn btn-primary'%>
          </div><!-- /.blog-post -->
        </div><!-- /.blog-main -->