<h2>All Press</h2>
<br>
<%= link_to 'Add New Media', new_press_path, class: "btn btn-large btn-primary" %>
<br><br>
<table class='user_table'>
  <tr>
    <th>Title</th>
    <th>Publish Date</th>
    <th></th>
    <th></th>
  </tr>
  <% @press.each do |press| %>
  <tr>
    <td><%= press.title %></td>
    <td><%= press.pubdate %> </td>
    <td><%= link_to 'Edit Media', edit_press_path(press), class: "btn btn-large btn-primary" %></td>
    <td><%= link_to "Delete", destroy_path(press), class: 'btn btn-danger', :confirm => "Are you sure you want to delete this?", :method => :delete %></td>
  </tr>
  <% end %>
</table>
