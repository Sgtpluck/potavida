  <% @press.errors.full_messages.each do |msg| %>
    <%= msg %><br>
  <% end %>

<%= form_for @press do |f| %>
 <div class="form_field">
    <%= f.label :title %><br>
    <%= f.text_area :title, size: '70x2' %>
  </div>
  <div class="form_field">
    <%= f.label :url %><br>
    <%= f.text_area :url, size: '70x2' %>
  </div>
  <div class="form_field">
    <%= f.label :pubdate%><br>
    <%= f.date_field :pubdate %>
  </div>
  <div class="actions"><%= f.submit class: "btn btn-large btn-success" %></div>
<% end %>